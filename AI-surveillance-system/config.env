# Camera Configuration
# Use 0 for webcam, rtsp URL for IP camera
# Example: rtsp://username:password@192.168.1.100:554/stream
CAMERA_SOURCE=0

# Region of Interest (ROI) coordinates (x1,y1,x2,y2)
# Leave empty to use full frame
ROI_START_POINT=100,100
ROI_END_POINT=540,380

# Face Recognition Settings
FACE_RECOGNITION_ENABLED=true
FACE_RECOGNITION_THRESHOLD=0.6

# Detection Settings
# Options: motion, face, both
DETECTION_MODE=both
MIN_CONTOUR_AREA=5000
PERSISTENCE_THRESHOLD=5
ALERT_INTERVAL=10

# Output Settings
OUTPUT_DIR=surveillance_footage
KNOWN_FACES_PATH=known_faces